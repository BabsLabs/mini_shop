<div class="category_image" id="merchants_index_image">
  <div class="navbar">
    <span class="logo"><a href="/">MiniShop</a></span>

    <div class="nav_links">
      <%= link_to 'Item Index', '/items' %>
      <%= link_to "Merchant Index", '/merchants' %>
    </div>
  </div>

  <div class="category">
    <h1>Enter info for a New Item</h1>
  </div>
</div>

<div class="display">
  <%= form_tag "/merchants/#{@merchant.id}/items", class: 'form', method: :post do %>
    <p><%= label_tag :name %></p>
    <p><%= text_field_tag :name %></p>
    <p><%= label_tag :description %></p>
    <p><%= text_field_tag :description %></p>
    <p><%= label_tag :image %></p>
    <p><%= text_field_tag :image %></p>
    <p><%= label_tag :price %></p>
    <p><%= text_field_tag :price %></p>
    <p><%= label_tag :inventory %></p>
    <p><%= text_field_tag :inventory %></p>
    <p><%= submit_tag("submit", class: 'button_2') %></p>
  <% end %>
<div class="display">