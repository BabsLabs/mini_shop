<div class="category_image" id="merchants_index_image">
  <div class="navbar">
    <span class="logo"><a href="/">MiniShop</a></span>

    <div class="nav_links">
      <%= link_to 'Item Index', '/items' %>
      <%= link_to "Merchant Index", '/merchants' %>
    </div>
  </div>

  <div class="category">
    <h2><%= link_to @merchant.name, "/merchants/#{@merchant.id}" %></h2>
    <h1>Items</h1>
  </div>
</div>

<div class="display">
  <% @items.each do |item| %>
    <h2><%= link_to item.name, "/items/#{item.id}" %></h2>
    <p>Description: <%= item.description %></p>
    <%= image_tag item.image, style: 'height:33%;width:33%;' %>
    <p>Price: <%= item.price %></p>
    <p>Status: <%= item.status %></p>
    <p>Inventory: <%= item.inventory %></p>
    <hr class="item_diver">
  <% end %>

  <%= link_to "Add Item", "/merchants/#{@merchant.id}/items/new", class: 'create' %>
</div>