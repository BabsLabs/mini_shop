<div class="category_image" id="merchants_create_image">
  <div class="navbar">
    <span class="logo"><a href="/">MiniShop</a></span>

    <div class="nav_links">
      <%= link_to 'Item Index', '/items' %>
      <%= link_to "Merchant Index", '/merchants' %>
    </div>
  </div>

  <div class="category">
    <h1>Edit <%= link_to  @merchant.name, "/merchants/#{@merchant.id}", class: 'name' %></h1>
  </div>
</div>

<div class="display">
  <%= form_tag "/merchants/#{@merchant.id}", class: 'form', method: :patch do %>
    <p><%= label_tag :name %></p>
    <p><%= text_field_tag :name, @merchant.name %></p>
    <p><%= label_tag :address %></p>
    <p><%= text_field_tag :address, @merchant.address %></p>
    <p><%= label_tag :city %></p>
    <p><%= text_field_tag :city, @merchant.city %></p>
    <p><%= label_tag :state %></p>
    <p><%= text_field_tag :state, @merchant.state %></p>
    <p><%= label_tag :zip %></p>
    <p><%= text_field_tag :zip, @merchant.zip %></p>
    <%= submit_tag('submit', class: 'button_2')%>
  <% end %>
</div>