<div class="category_image" id="merchants">
  <div class="navbar">
    <span class="logo"><a href="/">MiniShop</a></span>

    <div class="nav_links">
      <%= link_to 'Item Index', '/items' %>
      <%= link_to "Merchant Index", '/merchants' %>
      <%= link_to "Merchants Items", "/merchants/#{@merchant.id}/items" %>
    </div>
  </div>

  <div class="category">
    <h1><%= @merchant.name %></h1>
  </div>
</div>

<div class="display">
  <h2><%= @merchant.name %></h2>
  <p><%= @merchant.address %></p>
  <p><%= @merchant.city %></p>
  <p><%= @merchant.state %></p>
  <p><%= @merchant.zip %></p>

<%= link_to "Edit", "/merchants/#{@merchant.id}/edit", class: 'edit' %>

<%= link_to "DELETE", "/merchants/#{@merchant.id}", :method => :delete, class: 'delete' %>

</div>