<%= link_to "Items Index", '/items' %>
<%= link_to "Merchants Items", "/merchants/#{@item.merchant.id}/items" %>

<h1><%= @item.name %></h1>
<p>Description: <%= @item.description %></p>
<%= image_tag @item.image, style: 'height:33%;width:33%;' %>
<p>Price: <%= @item.price %></p>
<p>Status: <%= @item.status %></p>
<p>Inventory: <%= @item.inventory %></p>
<p>Merchant: <%= @item.merchant.name %></p>

<%= link_to 'Update Item', "/items/#{@item.id}/edit" %>

<%= link_to 'DELETE ITEM', "/items/#{@item.id}", :method => :delete %>