<h2>Edit the <%= @item %></h2>

<%= form_tag "/items/#{@item.id}", method: :patch do %>
  <p><%= label_tag :name %></p>
  <%= text_field_tag :name %>
  <p><%= label_tag :description %></p>
  <%= text_field_tag :description %>
  <p><%= label_tag :image %></p>
  <%= text_field_tag :image %>
  <p><%= label_tag :price %></p>
  <%= text_field_tag :price %>
  <p><%= label_tag :inventory %></p>
  <%= text_field_tag :inventory %>
  <%= submit_tag('submit') %>
<% end %>